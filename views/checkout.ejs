                    </div>
                    <!-- ./copyright -->
                </div>
                <div class="col">
                    <div class="footer-contact">
                        1234 Street Dr.<br>
                        City, State<br>
                        Zipcode<br>
                        Tel: (510)-200-3091<br>
                        Email: Hermes@Parraenviro.com<br>
                    </div>
                    <!-- ./footer-contact -->
                    <br>
                </div>
                <!-- ./footer-col -->
                <div class="col">
                    <div class="slogo">
                        "Training Done Right"<br>
